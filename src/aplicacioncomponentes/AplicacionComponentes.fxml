<?xml version="1.0" encoding="UTF-8"?>

<?import barraprogreso.BarraProgreso?>
<?import checkbutton.CheckButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import chrisboton.Chrisboton?>
<?import radialbuttoncustom.RadialButtonCustom?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="aplicacioncomponentes.AplicacionComponentesController"
            prefHeight="600.0" prefWidth="700.0"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/25">

    <children>
        <!-- Título -->
        <Label layoutX="180.0" layoutY="20.0" text="Configurador de Perfil de Usuario" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Separator layoutX="50.0" layoutY="65.0" prefWidth="600.0" />

        <!-- Preferencias Generales -->
        <VBox layoutX="50.0" layoutY="90.0" spacing="15.0"
              style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <children>
                <Label text="Preferencias Generales" textFill="#34495e">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <CheckButton fx:id="checkNotificaciones" text="Activar Notificaciones" />
                <CheckButton fx:id="checkModoOscuro" text="Modo Oscuro" />
                <CheckButton fx:id="checkSonido" text="Activar Sonidos" />
            </children>
        </VBox>

        <!-- Selección de Tema -->
        <VBox layoutX="370.0" layoutY="90.0" spacing="15.0"
              style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <children>
                <Label text="Seleccionar Tema" textFill="#34495e">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <RadialButtonCustom fx:id="radioTemaAzul" text="Tema Azul Océano" />
                <RadialButtonCustom fx:id="radioTemaVerde" text="Tema Verde Bosque" />
                <RadialButtonCustom fx:id="radioTemaRojo" text="Tema Rojo Atardecer" />
            </children>
        </VBox>

        <!-- Estado de Configuración -->
        <VBox layoutX="50.0" layoutY="345.0" prefHeight="140.0" prefWidth="600.0" spacing="10.0"
              style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 10;">
            <children>
                <Label text="Estado de Configuración" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <Label fx:id="lblConfiguracion" text="Configuración actual..." textFill="#7f8c8d" wrapText="true" />
            </children>
        </VBox>

        <!-- Barra de Progreso -->
        <VBox layoutX="50.0" layoutY="480.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label text="Progreso de Guardado" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <BarraProgreso fx:id="barraProgreso" prefWidth="600.0" />
                <Label fx:id="lblEstado" text="Listo para guardar" textFill="#27ae60" />
            </children>
        </VBox>

        <!-- Botones Guardar / Restaurar -->
        <HBox layoutX="375.0" layoutY="539.0" spacing="15.0">
            <children>
                <Chrisboton fx:id="btnChris" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
                <Chrisboton fx:id="btnRestaurar" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
            </children>
        </HBox>
    </children>
</AnchorPane>
